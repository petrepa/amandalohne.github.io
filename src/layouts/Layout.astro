---
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon_io_black/favicon.ico"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>Amanda Lohne</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Inter", "Helvetica Neue", Arial, sans-serif;
	}

	main {
		padding: 2rem;
	}

	.markdown img {
		display: block;
		width: 100%;
		max-width: 20pc;
		height: auto;
		max-height: 80vh;
		object-fit: contain;
		border-radius: 10px;
		border: 1px solid #e5e7eb;
		margin: 1rem auto 1.5rem;
	}

	.markdown picture {
		display: block;
		margin: 1rem auto 1.5rem;
		max-width: 20pc;
		width: 100%;
	}
</style>
